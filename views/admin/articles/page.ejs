<%- include ('../../partials/header.ejs') %>
    <%- include ('../../partials/homenavbar.ejs') %>

        <body>
            <div class="container mt-3">
                <% result.articles.rows.forEach(article=> { %>

                    <div class="card mb-3">
                        <div class="card-header">
                            <h2>
                                <%= article.title%>
                            </h2>
                        </div>
                        <div class="card-body">
                            <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
                        </div>
                    </div>

                    <% }) %>
                    <div class="row">
                        <div class="col col-12">
            
                            <% if(result.page > 2) {%>
                                <a style="float:left" href="/articles/page/<%= result.page - 1 %>"> <i class="fa-solid fa-angles-left"></i> Prev</a>
                            <% } else if(result.page == 2) { %>
                                <a style="float:left" href="/"><i class="fa-solid fa-angles-left"></i> Prev</a>
                            <% } %>
            
            
                            <% if(result.next)  {%>
                                <a style="float:right" href="/articles/page/<%= result.page + 1 %>">Next <i class="fa-solid fa-angles-right"></i></a>
                            <% } %>
                        </div>
                    </div>
            </div>
        </body>
        <%- include ('../../partials/footer.ejs') %>