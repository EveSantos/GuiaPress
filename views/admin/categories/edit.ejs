<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
    <div class="card mt-4">
        <div class="card-header">
            <h2 class="mt-4 mb-4">Edição de categorira</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/categories/update">
                <input class="form-control mb-3" type="text" name="title" placeholder="Defina o títlo da categoria" value="<%= category.title %>">
                <div class="d-flex justify-content-between">
                    <a href="/admin/categories" class="btn-primary btn">Voltar</a>
                    <input type="hidden" name="id" value="<%= category.id %>">
                    <button class="btn-success btn">Atualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>

