<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %> 
    
<div class="container">
    <hr>
    <h2>Categorias</h2>

    <table class="table mt-3 table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Açoes</th>
            </tr>
        </thead>    
        <tbody>         

            <% categories.forEach(category => { %>
                <tr>
                    <th><%=category.id%></th>
                    <th><%=category.title%></th>
                    <th><%=category.slug %></th>
                    <th></th>
                </tr>
            <% }) %>
        </tbody>    
    </table>

</div>

